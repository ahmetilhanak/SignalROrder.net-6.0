@model CreateMailVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">E-mail</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">E-mail Sending Page</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Receiver Mail</label>
                                <input asp-for="ReceiverMail" type="text" class="form-control" id="ReceiverMail">
                            </div>
                            <div class="form-group">
                                <label>Subject</label>
                                <input asp-for="Subject" type="text" class="form-control" id="Subject">
                            </div>
                            <div class="form-group">
                                <label>Email Content</label>
                                <textarea row="40" asp-for="Body" type="text" class="form-control" id="Body"></textarea>
                                @* <input asp-for="Body" type="text" class="form-control" id="Surname"> *@
                            </div>
                        </div>
                        <div class="card-action">
                            <button asp-controller="Mail" asp-action="Index" class="btn btn-primary">Send Email</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

