@model CreateNotificationVM
@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Notification</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">New Notification Addition</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="bookingmail">Description</label>
                                <input asp-for="Description" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="bookingname">Icon</label>
                                <input asp-for="Icon" type="text" class="form-control" >
                            </div>
                            <div class="form-group">
                                <label for="bookingphone">Type</label>
                                <input asp-for="Type" type="text" class="form-control" >
                            </div>
                            
                        </div>
                        <div class="card-action">
                            <button asp-controller="Notifications" asp-action="CreateNotification" class="btn btn-primary">Add Notification</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


