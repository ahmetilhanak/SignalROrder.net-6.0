@model List<ResultNotificationVM>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	var count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Notifications</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Notification List </div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can do proceessesfor Notifications from below
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>							
									<th scope="col">Description</th>
									<th scope="col">Date</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
									<th scope="col">Set as Read</th>
									<th scope="col">Set as not Read</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										<td><a class="btn btn-outline-danger" asp-controller="Notifications" asp-action="DeleteNotification" asp-route-id=@item.NotificationID>Delete</a></td>
										<td><a class="btn btn-outline-success" asp-controller="Notifications" asp-action="UpdateNotification" asp-route-id=@item.NotificationID>Update</a></td>
										<td><a class="btn btn-outline-warning" asp-controller="Notifications" asp-action="NotificationStatusChangeToTrue" asp-route-id=@item.NotificationID>Set as Read</a></td>
										<td><a class="btn btn-outline-secondary" asp-controller="Notifications" asp-action="NotificationStatusChangeToFalse" asp-route-id=@item.NotificationID>Set as not Read</a></td>

									</tr>
								}

							</tbody>
						</table>
						<a asp-controller="Notifications" asp-action="CreateNotification" class="btn btn-outline-primary">Add New Notification</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

