@using SignalROrderWebUI.ViewModels.CategoryVM
@model CreateCategoryVM
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Category</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">New Category Addition</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Category Name</label>
                                <input asp-for="CategoryName" type="text" class="form-control" id="categoryname">
                            </div>
                            @*<div class="form-group">
                                <label for="categorystatus">Category Status</label>
                                <input asp-for="CategoryStatus"  type="text" class="form-control" id="categorystatus">
                            </div>*@
                        </div>
                        <div class="card-action">
                            <button asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">Add Category</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


