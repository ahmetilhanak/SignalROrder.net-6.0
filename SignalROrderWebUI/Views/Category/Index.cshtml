@using SignalROrderWebUI.ViewModels.CategoryVM
@model List<ResultCategoryVM>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Category</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Category List </div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						    You can do proceesses about category from below
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Category Name</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.CategoryName</td>
										<td>@item.CategoryStatus</td>
										<td><a  class="btn btn-outline-danger" asp-controller="Category" asp-action="DeleteCategory" asp-route-id=@item.CategoryID>Delete</a></td>
										<td><a class="btn btn-outline-success" asp-controller="Category" asp-action="UpdateCategory" asp-route-id=@item.CategoryID>Update</a></td>
										
									</tr>
								}
														
							</tbody>
						</table>
						<a asp-controller="Category" asp-action="CreateCategory" class="btn btn-outline-primary">Add New Category</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
