@using SignalROrderWebUI.ViewModels.CategoryVM
@model UpdateCategoryVM
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Category</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Category Update</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input asp-for="CategoryID" type="text" class="form-control" id="categoryname" hidden>
                            </div>
                            <div class="form-group">
                                <label for="categoryname">Category Name</label>
                                <input asp-for="CategoryName" type="text" class="form-control" id="categoryname">
                            </div>
                            <div class="form-group">
                            <label for="categorystatus">Category Status</label>
                            <input asp-for="CategoryStatus"  type="text" class="form-control" id="categorystatus">
                            </div>
                        </div>
                        <div class="card-action">
                            <button asp-controller="Category" asp-action="UpdateCategory" class="btn btn-primary">Update Category</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

