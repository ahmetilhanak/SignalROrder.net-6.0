@model CreateAboutVM
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">About</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">New About Addition</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="abouttitle">About Title</label>
                                <input asp-for="Title" type="text" class="form-control" id="abouttitle">
                            </div>
                            <div class="form-group">
                                <label for="aboutimageurl">About Image Url</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="aboutimageurl">
                            </div>
                            <div class="form-group">
                                <label for="aboutdescription">About Description</label>
                                <textarea asp-for="Description" type="text" class="form-control" id="aboutdescription"></textarea>
                            </div>
                          
                        </div>
                        <div class="card-action">
                            <button asp-controller="About" asp-action="CreateAbout" class="btn btn-primary">Add About</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



