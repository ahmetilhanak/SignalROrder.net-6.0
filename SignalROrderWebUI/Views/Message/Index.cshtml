
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<section class="food_section layout_padding">
    <div class="container">      
        <div class="container mt-5">
           <div class="row">
                <div class="col-12">
                    <h3 class="text-center mb-4">SignalR Restaurant Instant Message Page</h3>
                </div>
           </div>
           <div class="row p-1">
               <div class="col-2">Kullanıcı Adınız:</div>
               <div class="col-5">
                   <input type="text" id="userinput" class="form-control" />
               </div> 
           </div>

           <div class="row p-1">
               <div class="col-2">Mesajınız</div>
                <div class="col-5">
                    <input type="text" id="messageinput" class="form-control" />
                </div>
           </div>

            <div class="row p-1">
                <div class="col-2"></div>
                <div class="col-3">
                    <input type="button" id="sendbutton" value ="Send Message" class="btn btn-warning" />
                </div>
            </div>

            <div class="row p-1">
                <div class="col-12">
                    <hr/>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-12">
                    <ul id="messagelist" class="list-group">                      
                    </ul>
                </div>                
            </div>

        </div>
    </div>
</section>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
<script src="~/js/chat.js"></script>
