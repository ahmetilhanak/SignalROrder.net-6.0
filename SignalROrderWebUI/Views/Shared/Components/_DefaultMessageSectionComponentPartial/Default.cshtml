@model CreateMessageVM
<!-- book section -->
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Contact Us
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post">
                        <div>
                            <input asp-for="NameSurname" type="text" class="form-control" placeholder="Your Full Name" />
                        </div>
                        <div>
                            <input asp-for="Subject" type="text" class="form-control" placeholder="Subject" />
                        </div>
                        <div>
                            <input asp-for="Phone" type="text" class="form-control" placeholder="Phone Number" />
                        </div>
                        <div>
                            <input asp-for="Mail" type="email" class="form-control" placeholder="Your Email" />
                        </div>                        
                        <div>
                            @* <input asp-for="MessageContent" type="text" class="form-control"> *@
                            <textarea asp-for="MessageContent" class="form-control" placeholder="Message Content" rows="10"></textarea>
                        </div>
                        <div>
                            <button asp-controller="Default" asp-action="SendMessage">
                               Send Message
                            </button>

                        </div>
                        @* <a class="btn_box" href="/BookATable/Index/">Deneme</a> *@
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end book section -->