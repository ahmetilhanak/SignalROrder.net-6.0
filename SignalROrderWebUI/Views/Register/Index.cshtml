@model RegisterVM 
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>SignalR Restaurant App Register Form</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Sauce1.jpg" alt="form" style="width:484px; height:644px">
			</div>
			<form class="form-detail" method="post">
				<h2>Register Form</h2>
				<div class="form-row">
					<input type="text"  class="input-text" placeholder="Name" required asp-for=Name>
				</div>
				<div class="form-row">
					<input type="text"  class="input-text" placeholder="Surname" required asp-for=Surname>
				</div>
				<div class="form-row">
					<input type="text"  class="input-text" placeholder="Username" required asp-for=Username>
				</div>
				<div class="form-row">
					<input type="text"  class="input-text" placeholder="Email Address" required  asp-for="Email">
				</div>
				<div class="form-row">
					<input type="password"  class="input-text" placeholder="Password" required asp-for="Password">
				</div>
				<div class="form-row-last">
					<input type="submit"  class="register" value="Register" asp-controller="Register" asp-action="Index">
				</div>
			</form>
		</div>
	</div>
</body>
</html>