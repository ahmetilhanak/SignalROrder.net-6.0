@model UserEditVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">User</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">User Edit Page</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Username</label>
                                <input asp-for="Username" type="text" class="form-control" id="Username">
                            </div>
                            <div class="form-group">
                                <label>Name</label>
                                <input asp-for="Name" type="text" class="form-control" id="Name">
                            </div>
                            <div class="form-group">
                                <label>Surname</label>
                                <input asp-for="Surname" type="text" class="form-control" id="Surname">
                            </div>
                            <div class="form-group">
                                <label>E-mail</label>
                                <input asp-for="Email" type="text" class="form-control" id="Email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="Password">
                            </div>
                            <div class="form-group">
                                <label>Re-Entry Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword">
                            </div>
                                                
                        </div>
                        <div class="card-action">
                            <button asp-controller="Setting" asp-action="Index" class="btn btn-primary">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>