@model CreateFeatureVM
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Feature</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">New Feature Addition</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="featuretitle1">Title-1</label>
                                <input asp-for="Title1" type="text" class="form-control" id="featuretitle1">
                            </div>
                            <div class="form-group">
                                <label for="featuredescription1">Description-1</label>
                                <input asp-for="Description1" type="text" class="form-control" id="featuredescription1">
                            </div>
                            <div class="form-group">
                                <label for="featuretitle2">Title-2</label>
                                <input asp-for="Title2" type="text" class="form-control" id="featuretitle2">
                            </div>
                            <div class="form-group">
                                <label for="featuredescription2">Description-2</label>
                                <input asp-for="Description2" type="text" class="form-control" id="featuredescription2">
                            </div>
                            <div class="form-group">
                                <label for="featuretitle3">Title-3</label>
                                <input asp-for="Title3" type="text" class="form-control" id="featuretitle3">
                            </div>
                            <div class="form-group">
                                <label for="featuredescription3">Description-3</label>
                                <input asp-for="Description3" type="text" class="form-control" id="featuredescription3">
                            </div>
                          

                        </div>
                        <div class="card-action">
                            <button asp-controller="Feature" asp-action="CreateFeature" class="btn btn-primary">Add Feature</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
