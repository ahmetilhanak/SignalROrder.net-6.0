@model List<ResultProductVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Product</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Product List </div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can do proceesses about product from below
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Product Name</th>
									@* <th scope="col">Description</th> *@
									<th scope="col">Price</th>
									@* <th scope="col">ImageUrl</th> *@
									<th scope="col">Category Name</th>
									<th scope="col">Product Status</th>									
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.ProductName</td>
										@* <td>@item.Description</td> *@
										<td>@item.Price</td>
										@* <td>@item.ImageUrl</td> *@
										<td>@item.CategoryName</td>
										<td>@item.ProductStatus</td>										
										<td><a class="btn btn-outline-danger" asp-controller="Product" asp-action="DeleteProduct" asp-route-id=@item.ProductID>Delete</a></td>
										<td><a class="btn btn-outline-success" asp-controller="Product" asp-action="UpdateProduct" asp-route-id=@item.ProductID>Update</a></td>

									</tr>
								}

							</tbody>
						</table>
						<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outline-primary">Add New Product</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

